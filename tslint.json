{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended"],
  "rulesDirectory": [],
  "rules": {
    "arrow-parens": [true, "ban-single-arg-parens"],
    "quotemark": [true, "single"],
    "member-access": [true, "no-public"],
    "interface-name": [true, "never-prefix"],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ]
  },
  "jsRules": {}
}
